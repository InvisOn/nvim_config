return {
	"epwalsh/pomo.nvim",
	version = "*",
	lazy = false,
	cmd = { "TimerStart", "TimerRepeat" },
	dependencies = {
		"rcarriga/nvim-notify",
	},
	opts = {
		notifiers = {
			{
				init = function(timer, opts)
					local DefaultNotifier = require("pomo.notifiers.default")

					local Sound = {}
					setmetatable(Sound, { __index = DefaultNotifier })

					Sound.new = function(timer, opts)
						local self = DefaultNotifier.new(timer, opts)
						setmetatable(self, { __index = Sound })
						return self
					end

					Sound.done = function(self)
						self:_update(string.format(" %s  timer done!", self.text_icon), vim.log.levels.WARN, 3000)

						local human_volume = 100
						local clamped_volume = math.max(0, math.min(100, human_volume))
						local paplay_volume = math.floor(clamped_volume * 655.36)

						local path = "~/.config/nvim/lua/plugins/pomo_assets/153212__freezeman__beep2.wav"

						vim.fn.system(string.format("paplay %s --volume=%d &", path, paplay_volume))

						print(string.format("Timer #%d, %s, complete", self.timer.id, self.timer.name))
					end

					return Sound.new(timer, opts)
				end,
				opts = {},
			},
		},
	},
}
